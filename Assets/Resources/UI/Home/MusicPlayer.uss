.play-tab-root {
    flex-grow: 1;
    background-color: rgb(13, 17, 23);
    padding-top: 200px;
    padding-bottom: 20px;
}

.play-header {
    flex-direction: row;
    justify-content: flex-end;
    align-items: center;
    padding: 20px 32px;
    margin-bottom: 20px;
}

.play-title {
    font-size: 72px;
    color: rgb(255, 255, 255);
    -unity-font-style: bold;
}

.header-actions {
    flex-direction: row;
    align-items: center;
}

.header-icon-button {
    width: 72px;
    height: 72px;
    background-color: transparent;
    border-width: 0;
    -unity-background-scale-mode: scale-to-fit;
    margin-left: 16px;
}

.header-icon-button:hover {
    -unity-background-image-tint-color: rgb(255, 255, 255);
}

.icon-search {
    background-image: resource('Icons/function_icon_search');
    -unity-background-image-tint-color: rgb(139, 148, 158);
}

.icon-filter {
    background-image: resource('Icons/function_icon_filter');
    -unity-background-image-tint-color: rgb(139, 148, 158);
}

.icon-play-mini {
    background-image: resource('Icons/btn_play');
    -unity-background-image-tint-color: rgb(255, 255, 255);
}

.icon-pause-mini {
    background-image: resource('Icons/btn_pause');
    -unity-background-image-tint-color: rgb(255, 255, 255);
}

.icon-next-mini {
    background-image: resource('Icons/btn_next');
    -unity-background-image-tint-color: rgb(255, 255, 255);
}

.song-list-scroll {
    flex-grow: 1;
    padding: 0 32px;
    padding-bottom: 160px;
}

.song-list-container {
    flex-direction: column;
}

.song-card {
    flex-direction: row;
    align-items: center;
    padding: 16px 20px;
    margin-bottom: 12px;
    background-color: rgb(22, 27, 34);
    border-radius: 16px;
    min-height: 140px;
    transition-property: background-color;
    transition-duration: 0.2s;
}

.song-card:hover {
    background-color: rgb(33, 38, 45);
}

.song-thumbnail {
    width: 100px;
    height: 100px;
    background-color: rgb(48, 54, 61);
    border-radius: 12px;
    margin-right: 24px;
    flex-shrink: 0;
}

.song-info {
    flex-grow: 1;
    flex-shrink: 1;
    flex-direction: column;
    justify-content: center;
    overflow: hidden;
    padding-right: 12px;
}

.song-title {
    font-size: 32px;
    color: rgb(255, 255, 255);
    -unity-font-style: bold;
    margin-bottom: 4px;
    overflow: hidden;
    -unity-text-overflow-position: end;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.song-artist {
    font-size: 26px;
    color: rgb(139, 148, 158);
    overflow: hidden;
    -unity-text-overflow-position: end;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.song-action-area {
    flex-direction: row;
    align-items: center;
    flex-shrink: 0;
}

.owned-check {
    width: 64px;
    height: 64px;
    background-image: resource('Icons/MenuIcon_Check_Disable');
    -unity-background-scale-mode: scale-to-fit;
    background-size: 100% 100%;
    -unity-background-image-tint-color: rgba(180, 188, 198, 0.7);
    transition-property: -unity-background-image-tint-color, scale;
    transition-duration: 0.15s;
}

.owned-check.active {
    background-image: resource('Icons/MenuIcon_Check_Focus');
    -unity-background-image-tint-color: rgb(29, 233, 182);
}

.owned-check:hover {
    scale: 1.1;
    -unity-background-image-tint-color: rgb(255, 255, 255);
}

.owned-check.active:hover {
    -unity-background-image-tint-color: rgb(50, 255, 200);
}

.play-song-button {
    display: none;
    width: 140px;
    height: 82px;
    background-color: transparent;
    border-radius: 12px;
    border-width: 4px;
    border-color: rgb(29, 233, 182);
    -unity-background-scale-mode: scale-to-fit;
    margin-right: 20px;
    min-width: 140px;
}

.play-song-button:hover {
    background-color: rgba(29, 233, 182, 0.2);
}

.buy-button {
    min-width: 140px;
    height: 100px;
    background-color: rgba(255, 215, 0, 0.05);
    border-width: 2.5px;
    border-color: rgb(255, 215, 0);
    border-radius: 18px;
    font-size: 30px;
    color: rgb(255, 215, 0);
    -unity-text-align: middle-center;
    -unity-font-style: bold;
    padding: 4px 12px;
    transition-property: background-color, border-color, scale;
    transition-duration: 0.2s;
}

.buy-button:hover {
    background-color: rgb(255, 215, 0);
    color: rgb(13, 17, 23);
    scale: 1.05;
}

.buy-button:active {
    scale: 0.95;
    background-color: rgb(218, 165, 32);
}

.buy-button:disabled {
    border-color: rgb(72, 79, 88);
    color: rgb(72, 79, 88);
}

.mini-player {
    position: absolute;
    bottom: 210px;
    left: 24px;
    right: 24px;
    height: 170px;
    background-color: rgb(33, 38, 45);
    border-radius: 20px;
    overflow: hidden;
}

.mini-player-content {
    flex-direction: row;
    align-items: center;
    padding: 16px 20px;
    height: 100%;
}

.mini-player-tap-area {
    position: absolute;
    left: 0;
    top: 0;
    right: 140px;
    bottom: 0;
}

.mini-album-art {
    width: 90px;
    height: 90px;
    background-color: rgb(48, 54, 61);
    border-radius: 12px;
    margin-right: 20px;
    flex-shrink: 0;
}

.mini-song-info {
    flex-grow: 1;
    flex-direction: column;
    justify-content: center;
}

.mini-now-playing {
    font-size: 24px;
    color: rgb(139, 148, 158);
    margin-bottom: 4px;
}

.mini-song-title {
    font-size: 43px;
    color: rgb(255, 255, 255);
    -unity-font-style: bold;
    margin-bottom: 4px;
}

.mini-artist-name {
    font-size: 38px;
    color: rgb(139, 148, 158);
}

.mini-controls {
    flex-direction: row;
    align-items: center;
    flex-shrink: 0;
}

.mini-control-button {
    width: 64px;
    height: 64px;
    background-color: transparent;
    border-width: 0;
    font-size: 55px;
    color: rgb(255, 255, 255);
    margin-left: 8px;
}

.mini-control-button:hover {
    color: rgb(29, 185, 84);
}

.mini-player.hidden {
    display: none;
}

.empty-state {
    flex-grow: 1;
    align-items: center;
    justify-content: center;
    padding: 80px 40px;
}

.empty-icon {
    font-size: 100px;
    color: rgb(72, 79, 88);
    margin-bottom: 28px;
}

.empty-title {
    font-size: 44px;
    color: rgb(139, 148, 158);
    -unity-text-align: middle-center;
    margin-bottom: 16px;
}

.empty-description {
    font-size: 36px;
    color: rgb(72, 79, 88);
    -unity-text-align: middle-center;
}

.hidden {
    display: none;
}

.visible {
    display: flex;
}
